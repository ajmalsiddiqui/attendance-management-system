<div id="detailed-attendance">
    <div>
        <p>Classroom ID: {{classroomId}}</p>
        <p>Total Classes: {{totalClasses}}</p>
        <p>Attended Classes: {{attendedClasses}}</p>
        <p>Percentage: {{percentage}}</p>
    </div>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Attendance</th>
            </tr>
        </thead>
        <tbody>
            <!-- TODO: add href -->
            {{#each attendances}}
            <tr>
                <td>{{this.classDate}}</td>
                <td>{{this.isPresent}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/student/renderClassrooms?studentId={{studentId}}"><p>Back</p></a>
</div>