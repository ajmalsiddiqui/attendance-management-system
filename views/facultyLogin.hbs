<div class="login" id="faculty-login">
    <form class="login-form" action="/faculty/loginWeb" method="POST">
        <fieldset>
            <legend>faculty Login</legend>
            <label for="faculty-login-regno" class="login-label">Registration Number:</label>
            <input type="text" id="faculty-login-empid" name="empId">
            <label for="faculty-login-password" class="login-label">Password:</label>
            <input type="password" id="faculty-login-password" name="password">
            <input type="submit" value="login">
        </fieldset>
    </form>
    <p>{{message}}</p>
</div>
